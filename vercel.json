{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "git": {
    "deploymentEnabled": false
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "DATABASE_URL",
    "REDIS_URL": "REDIS_URL",
    "PINATA_JWT": "PINATA_JWT",
    "ETH_RPC_URL": "ETH_RPC_URL",
    "RELAYER_PRIVATE_KEY": "RELAYER_PRIVATE_KEY",
    "CONTRACT_ECOCREDIT": "CONTRACT_ECOCREDIT",
    "CONTRACT_ATTESTATION": "CONTRACT_ATTESTATION",
    "AI_SERVICE_URL": "AI_SERVICE_URL",
    "JWT_SECRET": "JWT_SECRET",
    "INFURA_PROJECT_ID": "INFURA_PROJECT_ID",
    "INFURA_PROJECT_SECRET": "INFURA_PROJECT_SECRET"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_CHAIN_ID": "11155111",
      "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID": "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID",
      "NEXT_PUBLIC_ECO_TOKEN_ADDRESS": "NEXT_PUBLIC_ECO_TOKEN_ADDRESS",
      "NEXT_PUBLIC_ETH_RPC_URL": "NEXT_PUBLIC_ETH_RPC_URL",
      "NEXT_PUBLIC_ETH_MAINNET_RPC_URL": "NEXT_PUBLIC_ETH_MAINNET_RPC_URL"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/background",
      "schedule": "0 2 * * *"
    }
  ]
}
